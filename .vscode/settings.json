{
    "editor.formatOnSave": true,
    "editor.trimAutoWhitespace": true,
    "files.insertFinalNewline": true,
    "eslint.workingDirectories": ["./packages/duckdb-wasm", "./packages/benchmarks", "./packages/duckdb-wasm-shell"],
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typscript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[dockerfile]": {
        "editor.formatOnSave": false
    },
    "[xml]": {
        "editor.formatOnSave": false
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "files.watcherExclude": {
        "**/.cache": true,
        "**/.git": true,
        "**/.nyc_output": true,
        "**/dist": true,
        "**/node_modules": true,
        "**/target*": true,
        "**/.ccache": true,
        "**/.emscripten_cache": true,
        "**/lib/build": true,
        "**/submodules": true
    },
    "search.exclude": {
        "**/.cache": true,
        "**/.git": true,
        "**/.nyc_output": true,
        "**/dist": true,
        "**/node_modules": true,
        "**/target": true,
        "**/.ccache": true,
        "**/.emscripten_cache": true,
        "**/lib/build": true
    }
}
